{
  "compilerOptions": {
    "outDir": "./static/dist",
    "target": "es2017",
    "declaration": false,
    "module": "esNext",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "allowUmdGlobalAccess": true,
  },
 "include": [
    "./static/**/*"
  ],
} 
